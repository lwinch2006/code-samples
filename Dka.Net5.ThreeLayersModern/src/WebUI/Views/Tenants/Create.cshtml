@model Application.Logic.Tenants.Commands.CreateTenantCommand;

@{
    ViewData["Title"] = "Tenants - Create";
}

<h1> Tenants - Create</h1>

<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" maxlength="300"/>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <small class="text-muted">Choose name for tenant</small>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary"/>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>    
</form>